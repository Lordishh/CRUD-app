<div class="row">
  {{#each notes}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h4
            class="card-title d-flex justify-content-between align-items-center"
          >
            {{title}}
            <a href="#"><i class="fas fa-edit"></i></a>
          </h4>
          <p>
            {{description}}
          </p>
          <button class="btn btn-danger btn-block btn-sm">
            Borrar
          </button>
        </div>
      </div>
    </div>
  {{else}}
    <div class="card mx-auto">
      <div class="card-body">
        <p class="lead">No hay notas a√∫n.</p>
        <a href="/notes/add" class="btn btn-success btn-block">Crear Una!</a>
      </div>
    </div>
  {{/each}}
</div>